# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env on your production server
# Fill in all values with your production credentials
# NEVER commit .env file to version control!

# Application Configuration
APP_NAME=Kompetensia
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-production-domain.com

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# Use MySQL or PostgreSQL for production (SQLite not recommended)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kompetensia_production
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_password

# Broadcasting Configuration
BROADCAST_DRIVER=log

# Cache Configuration (Use Redis for better performance)
CACHE_DRIVER=redis
FILESYSTEM_DISK=local

# Queue Configuration (Use Redis or database for production)
QUEUE_CONNECTION=redis

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Redis Configuration (Recommended for production)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-mail-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (if using real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=ap1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-production-domain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# Security Configuration
# Generate new key with: php artisan key:generate
# Make sure to backup this key!

# Optional: Error Tracking (Sentry, Bugsnag, etc.)
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0

# Optional: Performance Monitoring
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=

# File Upload Limits
UPLOAD_MAX_FILESIZE=5M
POST_MAX_SIZE=10M
